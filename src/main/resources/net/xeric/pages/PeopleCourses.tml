<html t:type="layout" title="About jpa-demo"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
        >

    <p>Manage People and Courses</p>

    <h3>Add a Person:</h3>
    <t:beaneditform t:id="addPerson" object="person"/>

    <h3>Add a course:</h3>
    <t:beaneditform t:id="addCourse" object="course"/>

    <p>
        <t:form t:id="selectPerson">
            <t:select t:id="selectedPerson" t:value="selectedPerson" t:model="personModel"/>
            <t:submit/>
        </t:form>

        <br/>
        <strong>Current Selection</strong>:
        ${selectedPerson?.firstName}

    </p>


    <div>
        <h3>List People:</h3>
        <ul>
            <li t:type="loop" t:source="allPeople" t:value="person">
                ${person.firstName}
            </li>
        </ul>
        <h3>List Courses:</h3>
        <ul>
            <li t:type="loop" t:source="allCourses" t:value="course">
                ${course.name}
            </li>
        </ul>
    </div>
</html>
