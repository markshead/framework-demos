<html t:type="layout" title="About jpa-demo"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <h1>Manage Enrollment</h1>
    <hr/>

	
	<h3>List People:</h3>
		<ul>
			<li t:type="loop" t:source="allStudents" t:value="student">
				${student.firstName} ${student.lastName} (${student.enrolledCourses.size()})
				<t:eventlink t:context="student" t:id="manage">manage classes</t:eventlink>
			</li>
		</ul>

    <br/>
    <br/>
	<t:if test="studentToUpdate">
		<h3>Manage ${studentToUpdate.firstName} Here.</h3>
        <hr/>
		<t:form t:id="manageClasses">
			<t:palette t:id="classPalette" t:selected="courses" t:model="courseModel" t:encoder="courseEncoder"/>
			<t:submit t:id="updateClasses"/>
		</t:form>
	</t:if>

</html>
